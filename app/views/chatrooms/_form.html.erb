<div class="row justify-content-center">
    <%= render 'shared/errors', obj: @chatroom %>
    <div class="col-10">
         <%= form_with(model: @chatroom, local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :title, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= f.text_field :title, class:"form-control",  placeholder: "Title of article" %>
            </div>
          </div>
          <div class="form-group row justify-content-center">
              <%= f.submit class: "btn btn btn-success"%> 
            </div>
        <% end %>
          <div class = "mb-3">
            <%= link_to 'Return to Chatrooms', user_path(current_user),  class:"text-info col-2"  %> 
        </div>
    </div>
</div>