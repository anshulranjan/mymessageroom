
    <% @chatroom.each do |chatroom| %>
    <div class="card mt-3">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <div class="justify-content-start">
          <h3><%= link_to chatroom.title, chatroom_path(chatroom) , class:"text-dark" %> </h3>
        </div>
        <div class = "justify-content-end" >
          <span class="badge badge-dark badge-pill"><%= chatroom.messages.distinct.count(:user_id)  %> Users</span>
        </div>
      </div>
      <small>Created <%= time_ago_in_words(chatroom.created_at) %> ago</small>
    </div>
    </div>
    <br>
  <% end %>





 

  