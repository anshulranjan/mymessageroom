 <div class="row justify-content-center">
            <%= render 'shared/errors', obj: @user %>
         <div class="col-10">
          <%= form_with(model: @user, local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :username, class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
            <%= f.text_field :username, class:"form-control",  placeholder: "Enter a username" %>
            </div>
          </div>
          <div class="form-group row">
              <%= f.label :password, class:"col-sm-2 col-form-label"%> 
              <div class="col-sm-10">
              <%= f.password_field :password, class:"form-control" ,  placeholder: "Choose a password"%> 
              </div>
          </div>
          <div class="form-group row justify-content-center">
              <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn btn-success") %> 
            </div>
          <% end %>
    </div>
</div>